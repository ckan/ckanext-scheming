{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about":"Metadata schema for DPaW",
  "about_url": "http://github.com/florianm/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "validators": "if_empty_same_as(name) unicode",
      "form_snippet": "large_text.html",
      "form_attrs": {"data-module": "slug-preview-target"},
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "validators": "not_empty unicode name_validator package_name_validator",
      "form_snippet": "slug.html",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "tag_string",
      "label": "Tags",
      "validators": "ignore_missing tag_string_convert",
      "form_placeholder": "e.g. asset_, region_, indicator_",
      "form_attrs": {
        "data-module": "autocomplete",
        "data-module-tags": "",
        "data-module-source": "/api/2/util/tag/autocomplete?incomplete=?"
      }
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "validators": "owner_org_validator unicode",
      "form_snippet": "organization.html"
    },
    {
      "field_name": "url",
      "label": "DOI",
      "help_text": "Dataset DOI or any other online point of truth",
      "form_placeholder": "http://dx.doi.org/xxxx/yyyy",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "version",
      "label": "Data last updated",
      "help_text": "Date of last update to attached or linked data",
      "validators": "ignore_missing unicode package_version_validator",
      "form_placeholder": "dd-mm-yyyy"
    },
    {
      "field_name": "author",
      "label": "Author",
      "help_text": "Owner of intellectual property of the data, who should be attributed if data is re-used elswhere.",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator"
    },
    {
      "field_name": "author_email",
      "label": "Author Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:creator",
      "display_snippet": "email.html",
      "display_email_name_field": "author"
    },
    {
      "field_name": "maintainer",
      "label": "Maintainer",
      "help_text": "Maintainer of this metadata entry, who will update metadata and handle data requests.",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor"
    },
    {
      "field_name": "maintainer_email",
      "label": "Maintainer Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:contributor",
      "display_snippet": "email.html",
      "display_email_name_field": "maintainer"
    },
    {
      "field_name": "data_temporal_extent_begin",
      "label": "Data temporal extent from",
      "help_text": "Date of earliest observational record in data.",
      "form_placeholder": "dd-mm-yyyy",
      "display_property": "dc:date"
    },
    {
      "field_name": "data_temporal_extent_end",
      "label": "Data temporal extent until",
      "help_text": "Date of latest observational record in data.",
      "form_placeholder": "dd-mm-yyyy",
      "display_property": "dc:date"
    },
    {
      "field_name": "spatial",
      "label": "Data spatial extent",
      "help_text": "GeoJSON geometry of bounding polygon of dataset extent."
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "validators": "not_empty unicode remove_whitespace",
      "form_snippet": "upload.html",
      "form_placeholder": "http://example.com/my-data.csv",
      "upload_field": "upload",
      "upload_clear": "clear_upload",
      "upload_label": "File"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. Observations of X at Y"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "validators": "if_empty_guess_format ignore_missing clean_format unicode",
      "form_placeholder": "eg. CSV, PDF or JSON",
      "form_attrs": {
        "data-module": "autocomplete",
        "data-module-source": "/api/2/util/resource/format_autocomplete?incomplete=?"
      }
    },
    {
      "field_name":"update_frequency",
      "label": "Update frequency",
      "help_text": "How often are attached data expected to be updated?",
      "preset": "select",
      "choices": [
        {"value":"static", "label":"static"},
        {"value":"infrequent", "label":"infrequently"},
        {"value":"frequent", "label":"frequently"},
        {"value":"yearly", "label":"yearly"},
        {"value":"monthly", "label":"monthly"},
        {"value":"weekly", "label":"weekly"},
        {"value":"daily", "label":"daily"},
        {"value":"unknown", "label":"unknown"}
      ]
    }
  ]
}
